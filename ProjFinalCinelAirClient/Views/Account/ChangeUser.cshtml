@model ProjFinalCinelAirClient.Models.ChangeUserViewModel
@{ ViewData["Title"] = "ChangeUser"; }

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@900&display=swap" rel="stylesheet">

<br />
<h2 style=" margin-bottom:10px; border-bottom: solid 2px orange">Settings</h2>

@if (!string.IsNullOrEmpty(@ViewBag.UserMessage))
{
    <div class="alert alert-success" role="alert" style="font-weight:bold;font-size: large ">
        @ViewBag.UserMessage
    </div>
}

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="AnnualMilesBought" />
        <input type="hidden" asp-for="AnnualMilesConverted" />
        <input type="hidden" asp-for="AnnualMilesExtended" />
        <input type="hidden" asp-for="AnnualMilesTransfered" />
        <input type="hidden" asp-for="isClientNumberConfirmed" />
        <input type="hidden" asp-for="Miles_Bonus" />
        <input type="hidden" asp-for="Miles_Status" />
        <input type="hidden" asp-for="UserId" />

        <div class="row">
            <div class="col-md-3">

                <div class="d-flex justify-content-center" style="border: 1.5px solid gray; border-radius: 25px; margin-top: 10px">
                        <img src="~/images/placeholderUser.png" alt="Image" style="border-radius:25px; max-width: 100%; height: 220px;" />  
                </div>

                <div class="d-flex justify-content-center" style="margin-top: 30px;">
                    <h2 style="font-family: 'Poppins', Arial, sans-serif">Cinel<span style="color:orange">Air</span></h2>
                </div>

            </div>



            <div class="col-md-5">
                <h2 style="margin-bottom:2px; border-bottom: solid 2px gray">Personal Information</h2>

                <br />

                <div class="form-group">
                    <label asp-for="FirstName">First Name</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DateofBirth">Date of Birth</label>
                    <input asp-for="DateofBirth" class="form-control" />
                    <span asp-validation-for="DateofBirth" class="text-warning"></span>
                </div>

            </div>
            <div class="col-md-1 d-flex justify-content-md-center">
                <div class="align-self-end" style="height:300px;width: 2px; border: 1px gray solid; padding-top: 20px">

                </div>
            </div>
            <div class="col-md-3" style="margin-left: auto">

                <div class="form-group" style="">
                    <input type="submit" value="Update" class="btn btn-primary" />
                    <a asp-action="ChangePassword" class="btn btn-success">Change Password</a>
                </div>

                <br />

                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TaxNumber">Tax Identification Number</label>
                    <input asp-for="TaxNumber" class="form-control" />
                    <span asp-validation-for="TaxNumber" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Identification">Citizen Card Number</label>
                    <input asp-for="Identification" class="form-control" />
                    <span asp-validation-for="Identification" class="text-warning"></span>
                </div>
            </div>

            <div class="col-8">
                <div class="form-group">
                    <label asp-for="StreetAddress">Street Address</label>
                    <input asp-for="StreetAddress" class="form-control" />
                    <span asp-validation-for="StreetAddress" class="text-warning"></span>
                </div>
            </div>

            <div class="col-1 d-flex justify-content-center" style="padding-top:15px">
                <div class="align-self-center" style="border: gray 1px solid; width: 50px; ">

                </div>
            </div>

            <div class="col-3">
                <div class="form-group">
                    <label asp-for="PostalCode">Postal Code</label>
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-warning"></span>
                </div>
            </div>

            <div class="col-4">
                <div class="form-group">
                    <label asp-for="Client_Number">Client Number</label>
                    <input readonly asp-for="Client_Number" class="form-control" />
                    <span asp-validation-for="Client_Number" class="text-warning"></span>
                </div>
            </div>

            <div class="col-4">
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input readonly asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-warning"></span>
                </div>
            </div>

            <div class="col-4">
                <div class="form-group">
                    <label asp-for="JoinDate">Join Date</label>
                    <input readonly asp-for="JoinDate" class="form-control" />
                    <span asp-validation-for="JoinDate" class="text-warning"></span>
                </div>
            </div>

        </div>

    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
