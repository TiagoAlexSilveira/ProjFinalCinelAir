@model ProjFinalCinelAirClient.Models.RecoverPasswordViewModel

@{ ViewData["Title"] = "Recover Password"; }
<br />
<br />

<h2>Recover Password</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Recover password" class="btn btn-primary btn-block" />
                <a asp-action="Login" class="btn btn-secondary btn-block">Back to login</a>
            </div>
        </form>
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-success" style="font-weight: bold">@ViewBag.Message </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}