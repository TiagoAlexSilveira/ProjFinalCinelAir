@model ProjFinalCinelAirClient.Models.NotificationsViewModel
@{
    ViewData["Title"] = "Notifications";
}

<partial name="_MainMenuPartial" />

<br />
<div class="col-12 text-center">
    <h2>Notifications</h2>
</div>
<br />

@if (Model.NotificationList.Count > 0)
{
    <div class="table-responsive">
        <table id="teste" class="table table-bordered">
            <thead class="thead-dark" style="text-align:center">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Subject)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Message)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.NotificationList)
                {
                    <tr class="text-center">
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Subject)
                        </td>
                        <td class="align-middle">
                            @if (item.Message.Length >= 80)
                            {
                                <div class="dropdown ">
                                    <button class="btn btn-secondary dropdown-toggle" style="padding:3px; width: 100px" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Info
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu2">
                                        <div class="" style="max-width:50em ;padding: 10px; word-wrap: break-word">
                                            @Html.DisplayFor(modelItem => item.Message)
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.Message)
                            }

                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="col-12 text-center">
        <p style="font-size: medium">There are no new notifications at this time</p>
    </div>
}



<script>
    $(document).ready(function () {
        $('#teste').DataTable();
    });
</script>