@model ProjFinalCinelAirClient.Models.PartnersViewModel
@{
    ViewData["Title"] = "Balance and Transactions";
}

<partial name="_MainMenuPartial" />

<br />
<br />
<div class="col-12 text-center">
    <h2>Partners</h2>
</div>
<br />

@if (Model.PartnerList.Count > 0)
{
    <div style="width: 200px; word-break:break-word; border: black 1px solid; text-align:center">
        @foreach (var item in Model.PartnerList)
        {
            <div style="height:60px; margin-top: 10px">
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="@Url.Content(item.ImageUrl)" alt="Image" style="border-radius:25px; max-width: 100%; height: 220px;" />                    
                }
            </div>
            <div>
                <p style="font-weight:bold">@item.Name</p>

                <p>@item.Description</p>

                <p>@item.Contact</p>
            </div>
        }
    </div>
}
else
{
    <div class="col-12 text-center">
        <h2>We seem to be having some issues, check back another time</h2>
    </div>
    <br />
}
