<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjFinalCinelAir.Prism.Views.Main"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Start" Margin="0,60,0,0">
        <Image HeightRequest="100"
                       Source="logo.png"
                       Margin="0,10,5,30"/>
        <Label Text="Welcome to CinelAir Miles" />
        <Button Text="Welcome" BackgroundColor="DarkBlue" TextColor="White" CornerRadius="30" Command="{Binding LoginCommand}"/>
    </StackLayout>

</ContentPage>