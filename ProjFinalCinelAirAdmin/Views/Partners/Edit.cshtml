@model ProjFinalCinelAirAdmin.Models.PartnerViewModel

@{
    ViewData["Title"] = "Edit";
}


<div class="site-section" id="next">
    <div class="container">
        <h2>Edit Partner</h2>
        <br />
        @if (!string.IsNullOrEmpty(@ViewBag.Message))
        {
            <div class="text-success">
                <p>
                    @ViewBag.Message
                </p>
            </div>

            <br />
            <div class="form-group">
                <a class="btn btn-success" asp-controller="Partners" asp-action="Index">Back To List</a>
            </div>

        }

        else
        {

            <div class="row">

                <form asp-action="Edit" class="col-md-4 offset-md-4" style="min-width: 100%;min-height:100%; margin-left:0px " enctype="multipart/form-data">
                    <div class="form-group" style="width: 20%; height:80%; float:left; margin-right:4%">

                        <img src="@Url.Content(Model.ImageUrl)" alt="Image" style="min-width: 100%; max-width:100%; min-height:100%; max-height:100%;" />
                    </div>

                    <div class="form-group" style="width: 36%; float: left; margin-right:4%;">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="float:left; width: 36%; float:left">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>


                    <div class="form-group" style="float:left; width: 36%; float:left; margin-right:4%;">
                        <label asp-for="Contact" class="control-label"></label>
                        <input asp-for="Contact" class="form-control" />
                        <span asp-validation-for="Contact" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="float:left; width: 36%; float:left; margin-right:4%;">
                        <label asp-for="ImageFile" class="control-label"></label>
                        <input asp-for="ImageFile" class="form-control" type="file" /> <!--Deixa de ser uma caixa de texto e passa a ser uma caixa de upload-->
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <div style="clear:both"></div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-info" />
                        <a class="btn btn-success" asp-action="Index">Back to List</a>
                    </div>
                </form>

            </div>
        }
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
