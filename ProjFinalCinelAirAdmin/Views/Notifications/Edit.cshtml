@model ProjFinalCinelAirAdmin.Controllers.RichTextEditorModel
@{
    ViewData["Title"] = "Notification";
}


<div>
    <div class="container">

        <h2>Employee Update</h2>
        <br />
        @if (!string.IsNullOrEmpty(@ViewBag.Message))
        {
            <div class="text-success">
                <p>
                    @ViewBag.Message
                </p>
            </div>

            <br />
            <div class="form-group">
                <a class="btn btn-success" asp-controller="Home" asp-action="Index">Home</a>
            </div>

        }

        else
        {

            <div class="row">
                <div class="col-md-4 offset-md-4" style="min-width: 50%; margin:auto">
                    <form method="post">

                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="form-group" style="width: 48%; float: left; margin-right:4%">
                            <label asp-for="FirstName">First Name</label>
                            <input asp-for="FirstName" class="form-control" disabled/>
                        </div>

                        <div class="form-group" style="float:left; width: 48%; float:left">
                            <label asp-for="LastName">Last Name</label>
                            <input asp-for="LastName" class="form-control" disabled/>
                        </div>

                        <div class="form-group" style="width: 48%; float: left;margin-right:4%">
                            <label asp-for="Subject">Subject</label>
                            <input asp-for="Subject" class="form-control" disabled/>
                        </div>

                        <div class="form-group" style=" width: 100%; float:right">
                            <label asp-for="Message">Message</label>
                            <input asp-for="Message" class="form-control" disabled />
                        </div>
                        <div style="clear:both"></div>

                        <ejs-richtexteditor ejs-for="Value" id="RTEfor">
                        </ejs-richtexteditor>
                        <div id="errorMessage">
                            <span asp-validation-for="Value"></span>
                        </div>
                        <br />
                        <div class="form-group" style=" float: right; margin-top:30px">
                            <input type="hidden" asp-for="ClientId" />
                            <input type="hidden" asp-for="Id" />
                      
                            <input type="submit" value="Update" class="btn btn-primary" />
                            <a class="btn btn-success" asp-action="Index">Back To List</a>
                        </div>

                    </form>
                </div>


            </div>
        }
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}
