@model ProjFinalCinelAirAdmin.Models.ClientViewModel
@{
    ViewData["Title"] = "Edit Client";
}

<div>
    <div class="container">

        <h2>Client Update</h2>
        <br />
        @if (!string.IsNullOrEmpty(@ViewBag.Message))
        {
            <div class="text-success">
                <p>
                    @ViewBag.Message
                </p>
            </div>

            <br />
            <div class="form-group">
                <a class="btn btn-success" asp-controller="Home" asp-action="Index">Home</a>
            </div>

        }

        else
        {

            <div class="row">
                <div class="col-md-4 offset-md-4" style="min-width: 50%; margin:auto">
                    <form method="post" asp-action="Edit">

                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="form-group" style="width: 48%; float: left; margin-right:4%">
                            <label asp-for="client.FirstName">First Name</label>
                            <input asp-for="client.FirstName" class="form-control" />
                            <span asp-validation-for="client.FirstName" class="text-warning"></span>
                        </div>

                        <div class="form-group" style="float:left; width: 48%; float:left">
                            <label asp-for="client.LastName">Last Name</label>
                            <input asp-for="client.LastName" class="form-control" />
                            <span asp-validation-for="client.LastName" class="text-warning"></span>
                        </div>

                        <div class="form-group" style=" width: 100%;">
                            <label asp-for="client.Email">Email</label>
                            <input asp-for="client.Email" class="form-control" />
                            <span asp-validation-for="client.Email" class="text-warning"></span>
                        </div>

                        <div class="form-group" style=" width: 48%; float:left;margin-right:4%">
                            <label asp-for="client.Client_Number"></label>
                            <input asp-for="client.Client_Number" class="form-control" />
                            <span asp-validation-for="client.Client_Number" class="text-warning"></span>
                        </div>

                        <div class="form-group" style="width: 48%; float: left;">
                            <label asp-for="client.StreetAddress">Address</label>
                            <input asp-for="client.StreetAddress" class="form-control" />
                            <span asp-validation-for="client.StreetAddress" class="text-warning"></span>
                        </div>

                        <div class="form-group" style="width: 48% ;  float:left; margin-right:4%">
                            <label asp-for="CountryId" class="control-label"></label>
                            <select id="CountryId" asp-for="CountryId" asp-items="Model.Countries" class="form-control"></select>
                            <span asp-validation-for="CountryId" class="text-danger"></span>
                        </div>

                        <div class="form-group" style="width: 48%; float: left">
                            <label asp-for="CityId" class="control-label"></label>
                            <select id="CityId" asp-for="CityId" asp-items="Model.Cities" class="form-control"></select>
                            <span asp-validation-for="CityId" class="text-danger"></span>
                        </div>


                        <div class="form-group" style="width: 48%; float: left;margin-right:4%">
                            <label asp-for="client.PostalCode">Postal Code</label>
                            <input asp-for="client.PostalCode" class="form-control" />
                            <span asp-validation-for="client.PostalCode" class="text-warning"></span>
                        </div>

                        <div class="form-group" style="width: 48%; float: left;">
                            <label asp-for="client.DateofBirth" class="control-label"></label>
                            <input asp-for="client.DateofBirth" type="date" class="form-control" />
                            <span asp-validation-for="client.DateofBirth" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="width: 48%; float: left; margin-right:4%">
                            <label asp-for="client.TaxNumber">Tax Number</label>
                            <input asp-for="client.TaxNumber" class="form-control" />
                            <span asp-validation-for="client.TaxNumber" class="text-warning"></span>
                        </div>

                        <div class="form-group" style="width: 48%; float: left;">
                            <label asp-for="client.Identification">Identification Number</label>
                            <input asp-for="client.Identification" class="form-control" />
                            <span asp-validation-for="client.Identification" class="text-warning"></span>
                        </div>

                        <div class="form-group" style="width: 48%; float: left; margin-right:4%">
                            <label asp-for="client.JoinDate" class="control-label"></label>
                            <input asp-for="client.JoinDate" type="date" class="form-control" />
                            <span asp-validation-for="client.JoinDate" class="text-danger"></span>
                        </div>

                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                        {
                            <div class="form-group" style="width: 48%; float: left;">
                                <label asp-for="client.isClientNumberConfirmed" class="control-label"></label>
                                <input asp-for="client.isClientNumberConfirmed" class="form-control" />
                                <span asp-validation-for="client.isClientNumberConfirmed" class="text-danger"></span>
                            </div>
                        }

                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("SuperUser"))
                        {
                            <div class="form-group" style="width: 48%; float: left;">
                                <label asp-for="client.isClientNumberConfirmed" class="control-label"></label>
                                <input asp-for="client.isClientNumberConfirmed" class="form-control" />
                                <span asp-validation-for="client.isClientNumberConfirmed" class="text-danger"></span>
                            </div>

                            <label asp-for="StatusId" class="control-label"></label>
                            <select id="StatusId" asp-for="StatusId" asp-items="Model.Status" class="form-control"></select>
                            <span asp-validation-for="StatusId" class="text-danger"></span>
                        }
                        <br />
                        <br />
                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                        {
                            //<div class="form-group" style=" float: right; margin-top:30px">
                                <input type="submit" value="Update" class="btn btn-primary" />
                                <a class="btn btn-success" asp-action="Index">Back To List</a>
                            //</div>
                        }

                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("SuperUser"))
                        {
                            <div class="form-group" style=" float: right; margin-top:30px">
                                <input asp-action="EditSuperUser" type="submit" value="Update" class="btn btn-primary" />
                                <a class="btn btn-success" asp-action="Index">Back To List</a>
                            </div>
                        }
                    </form>
                </div>


            </div>
        }
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(document).ready(function () {
            $("#CountryId").change(function () {
                $("#CityId").empty();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetCitiesFromCountry")',
                    dataType: 'json',
                    data: { countryId: $("#CountryId").val() },
                    success: function (cities) {
                        debugger;
                        $("#CityId").append('<option value="0">(Select a city...)</option>');
                        $.each(cities, function (i, city) {
                            $("#CityId").append('<option value="'
                                + city.id + '">'
                                + city.name + '</option>');
                        });
                    },
                    error: function (ex) {
                        alert('Failed to retrieve cities.' + ex);
                    }
                });
                return false;
            })
        });
    </script>


}
