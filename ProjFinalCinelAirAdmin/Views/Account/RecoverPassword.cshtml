@model ProjFinalCinelAirAdmin.Models.RecoverPasswordViewModel

@{
    ViewData["Title"] = "Recover Password";
}


<div class="site-section" id="next">
    <div class="container">
        <h2>Recover Your Password</h2>

        <div class="row">
            <div class="col-md-4 offset-md-4" style="min-width: 40%;">
                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Recover password" class="btn btn-success" style="float:left" />
                        <a asp-action="Login" class="btn btn-primary">Back to login</a>
                    </div>
                </form>
                <div class="text-success">
                    <p>
                        @ViewBag.Message
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
